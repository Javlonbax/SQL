select * from Products
where Price > 500 or (StockQuantity>120 and Category='Electronics')

select * from Products
where Category like '%on%'       -   on so`zi bor ko`rsatkichlarni filtrlab beradi
where Category like '%s'       -   s so`zi bilan tugaydigan ko`rsatkichlarni filtrlab beradi
where Category like 'S%'       -   S  bilan boshlanadigan ko`rsatkichlarni filtrlab beradi
where Category like '_t%'       -   2- harfi t bo`lgan ko`rsatkichlarni filtrlab beradi, pastki chiziq nechta ushanchadan keyin bo`ladi
where Category like '[SC]%'    ----        boshi S yoki C bo`lgan ko`rsatkichlarni filtrlab beradi
where Category not like '[SC]%'
  
select * from Products
where Category in ('Accessories','Electronics')  ----  Category ning ichidagi 'Accessories','Electronics' li ko`rsatkichlarni saralaydi

where Category not in ('Accessories','Electronics')

where Price between 400 and 800

select ProductName, ProductID from Products
where Category in ('Electronics','Accessories') and (Price>500 and StockQuantity>20)

select distinct Category from Products    -   -----     distinct faqat unique, ya'ni dubllarsiz chiqaradi

select distinct Category,ProductName from Products    ---   guruhlanvotgan 1 yozilgani birinchi sortirofka, keyingi yozilgan keyin sortirofvka qiladi


select * from Products
order by Price asc               ----  kichikdan kattaga sortirofka, yozilmasayam bo`ladi    , tekst bilan ham ishliydi
order by Price desc               ----  kattadan kichikka sortirofka, yozilmasayam bo`ladi , tekst bilan ham ishliydi

  select top 3 * from Products     --- boshidi 3 tani chiqaradi
  
  select top 3 * from Products order by Price desc    - narx bo`yicha sort qivolib, top 3 tani chiqaradi


select * from Products
order by Price desc
offset 5 rows fetch next 5 rows only    ---    5 ta qatorri tashab keyingi 5 tani oladi
